<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client"
        xmlns:OleDb="clr-namespace:System.Data.OleDb;assembly=System.Data" x:Class="client.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" HorizontalAlignment="Stretch">
    <DockPanel >
        <Menu HorizontalContentAlignment="Center" DockPanel.Dock="Top">
            <MenuItem Header="MenuItem"/>
            <MenuItem Header="MenuItem"/>
        </Menu>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Width="130" IsSynchronizedWithCurrentItem="True"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" DockPanel.Dock="Right" SelectionChanged="DataGrid_SelectionChanged_1" AutoGenerateColumns="False" AreRowDetailsFrozen="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО"/>
                <DataGridTextColumn HeaderStringFormat="ДР" Header="Дата рождения">
                    <DataGridTextColumn.HeaderStyle>
                        <Style/>
                    </DataGridTextColumn.HeaderStyle>
                </DataGridTextColumn>
                <DataGridCheckBoxColumn Header="Удалено"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
