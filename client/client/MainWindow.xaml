<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client"
        xmlns:OleDb="clr-namespace:System.Data.OleDb;assembly=System.Data" x:Class="client.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" HorizontalAlignment="Stretch" MinWidth="800" MinHeight="450" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Menu HorizontalContentAlignment="Stretch" MinWidth="800" VerticalContentAlignment="Top" VerticalAlignment="Top" Height="18">
            <MenuItem Header="MenuItem"/>
            <MenuItem Header="Вид">
                <MenuItem Header="Таблицы"/>
                <MenuItem Header="Запросы"/>
                <MenuItem Header="Отчёты"/>
            </MenuItem>
        </Menu>
        <DockPanel RenderTransformOrigin="0.5,0.5" Margin="0,21,0,42">
            <StackPanel Orientation="Vertical" Width="100">
                <Label Content="Таблицы" HorizontalAlignment="Center"/>
                <ListBox x:Name="elementList" MinWidth="100" MinHeight="372" Background="#FFB3C6E9"/>
            </StackPanel>
            <DataGrid x:Name="dataGrid" IsReadOnly="True" MinWidth="670" DockPanel.Dock="Right" Background="#FFC6BCBC" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
        </DockPanel>
        <WrapPanel Margin="100,0,0,0" VerticalAlignment="Bottom" Height="40" ItemHeight="25" ItemWidth="170" Grid.Row="0" HorizontalAlignment="Stretch">
            <Button Content="Создать" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="25" Margin="0,0,0,0"/>
            <Button Content="Удалить" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="25" Margin="0,0,0,0"/>
            <Button Content="Изменить" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="25" Margin="0,0,0,0"/>
            <Button Content="Поиск" Width="100" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="25" Margin="0,0,0,0"/>
        </WrapPanel>
    </Grid>
</Window>
