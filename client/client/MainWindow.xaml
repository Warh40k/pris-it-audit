<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client"
        xmlns:OleDb="clr-namespace:System.Data.OleDb;assembly=System.Data" x:Class="client.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" HorizontalAlignment="Stretch" MinWidth="800" MinHeight="450" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Menu HorizontalContentAlignment="Stretch" MinWidth="800" VerticalContentAlignment="Top" VerticalAlignment="Top">
            <MenuItem Header="MenuItem"/>
            <MenuItem Header="MenuItem"/>
        </Menu>
        <Menu HorizontalContentAlignment="Stretch" VerticalAlignment="Top" MinWidth="800" VerticalContentAlignment="Top" Margin="0,18,0,0">
            <MenuItem Header="MenuItem"/>
            <MenuItem Header="MenuItem"/>
        </Menu>
        <DockPanel RenderTransformOrigin="0.5,0.5" Margin="0,36,0,-2">
            <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" MinWidth="100" MinHeight="400">
                <ListBoxItem Content="Nikita"/>
            </ListBox>
            <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGrid_SelectionChanged_1" AutoGenerateColumns="False" AreRowDetailsFrozen="True" MinWidth="670" DockPanel.Dock="Right">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ФИО"/>
                    <DataGridTextColumn HeaderStringFormat="ДР" Header="Дата рождения">
                        <DataGridTextColumn.HeaderStyle>
                            <Style/>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                    <DataGridCheckBoxColumn Header="Удалено"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
    </Grid>
</Window>
